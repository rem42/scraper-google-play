{
  "name": "rem42/scraper-google-play",
  "description": "API Google Play Scraper",
  "license": "MIT",
  "authors": [
    {
      "name": "rem42",
      "email": "me@remy.ovh",
      "homepage": "https://remy.ovh"
    }
  ],
  "require": {
    "php": "^8.1",
    "rem42/scraper": "^3.0"
  },
  "require-dev": {
    "rem42/php-cs-fixer-config": "^3.4",
    "phpstan/phpstan": "^1.8",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Scraper\\ScraperGooglePlay\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Scraper\\ScraperGooglePlay\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "static-analysis": "./vendor/bin/phpstan analyse src --level=max --no-progress -vvv",
    "code-style-check": "./vendor/bin/php-cs-fixer fix --dry-run --verbose",
    "code-style-fix": "./vendor/bin/php-cs-fixer fix --using-cache=no",
    "unit-test": "./vendor/bin/phpunit"
  }
}
